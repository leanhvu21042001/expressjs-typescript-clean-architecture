model User {
    id        Int       @id @default(autoincrement())
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    deletedAt DateTime?

    age       Int
    name      String
    phone     String @unique
    email     String @unique
    gender    String
    username  String @unique
    password  String
    addressId Int?

    address Address?   @relation(fields: [addressId], references: [id])
    roles   UserRole[]

    @@map("users")
}
