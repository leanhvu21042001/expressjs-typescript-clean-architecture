{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/application/*": ["src/application/*"],
      "~/di/*": ["src/di/*"],
      "~/domain/*": ["src/domain/*"],
      "~/infrastructure/*": ["src/infrastructure/*"],
      "~/presentation/*": ["src/presentation/*"],
      "~/shared/*": ["src/shared/*"]
    },
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "files": ["src/type.d.ts"]
}
